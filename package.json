{
  "name": "hr-document",
  "version": "2.0.0",
  "repository": "https://github.com/vnodesign/hr-document.git",
  "author": "Tuan Duc Design <nguoisoidangyeu@outlook.com.vn>",
  "license": "MIT",
  "packageManager": "pnpm@8.14.3",
  "scripts": {
    "prepare": "husky install",
    "prettier:write": "prettier --write \"**/*.{md,mdx}\" --cache",
    "prettier:check": "prettier --check \"**/*.{md,mdx}\" --cache"
  },
  "lint-staged": {
    "*.+(md|mdx)": [
      "pnpm prettier:check && pnpm prettier:write"
    ]
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.2.1",
    "prettier": "^3.0.3"
  }
}
