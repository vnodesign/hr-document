{
  "name": "hr-document",
  "version": "2.0.0",
  "repository": "https://github.com/vnodesign/hr-document.git",
  "author": "Tuan Duc Design <tuanductran.dev@gmail.com>",
  "license": "MIT",
  "packageManager": "pnpm@9.2.0",
  "scripts": {
    "prepare": "husky install",
    "prettier:write": "prettier --write \"**/*.{md,mdx}\" --cache",
    "prettier:check": "prettier --check \"**/*.{md,mdx}\" --cache"
  },
  "lint-staged": {
    "*.+(md|mdx)": [
      "pnpm prettier:check && pnpm prettier:write"
    ]
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.2.5"
  }
}
