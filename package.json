{
  "name": "hr-document",
  "version": "1.0.1",
  "repository": "https://github.com/vnodesign/hr-document.git",
  "author": "Tuan Duc Design <nguoisoidangyeu@outlook.com.vn>",
  "license": "MIT",
  "packageManager": "bun@1.0.3",
  "scripts": {
    "prepare": "husky install",
    "prettier:write": "prettier --write \"**/*.{md,mdx}\" --cache",
    "prettier:check": "prettier --check \"**/*.{md,mdx}\" --cache"
  },
  "lint-staged": {
    "*.+(md|mdx)": [
      "bun prettier:check && bun prettier:write"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3"
  }
}
